<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABC Retail</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="Upload">Upload</a></li>
                <li><a asp-controller="Home" asp-action="CreateCustomerProfile">Create Customer Profile In Database</a></li>
                <li><a asp-controller="Home" asp-action="ListCustomerProfiles">List Customer Profiles</a></li>
                <!-- <li><a asp-controller="Home" asp-action="ListCustomerProfiles">Submitting Customer Profile To Database</a> </li>-->
                <li><a asp-controller="Home" asp-action="ListFiles">List Files</a></li>
                <li><a asp-controller="Home" asp-action="ListImages">List Images</a></li>
            </ul>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2024 - ABC Retail</p>
    </footer>

    <!-- Render scripts section -->
    @RenderSection("Scripts", required: false)
</body>
</html>
